<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/SettingsActivityLayout"
    android:background="@drawable/ripple"
    tools:context="wusadevelopment.albert.com.placez.SettingsActivity">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/SettingsActivityRemoveBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/transparent"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_delete_forever_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/removeAllText"
        android:id="@+id/SettingsActivityRemoveText"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:layout_toRightOf="@+id/SettingsActivityRemoveBtn" />
</RelativeLayout>
